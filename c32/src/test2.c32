ulong time(int len) {
    const ulong startTime = Core::currentTimeMillis();
    int* array = malloc(len * sizeof(int));
    {   // for пока нет :(
        int i = 0;
        while (i < len) {
            array[i] = randInt(100);
            ++i;
        }
    }
    int min = findMin(array, len);
    int max = findMax(array, len);
    //print(min);
