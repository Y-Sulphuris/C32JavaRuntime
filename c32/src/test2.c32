    //println(array[min]);
    //print(max);
    //print('\t');
    //println(array[max]);
    //урааа работает

    int result = 1;
    if(max > min) {
        int i = min;
        while(i < max) {
            result = result * array[i];
            ++i;
        }
    } else {
        int i = max;
        while(i < min) {
            result = result * array[i];
            ++i;
        }
    }
    const ulong endTime = Core::currentTimeMillis();


    free(array);
    return endTime - startTime;
}

